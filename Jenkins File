pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = 'ap-south-1'
        S3_BUCKET = 'sahana-static'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/koothysahana/sah-static-website.git', branch: 'main'
            }
        }
        stage('Deploy to S3') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'aws-s3-credentials', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
                    sh '''
                        aws s3 sync . s3://$S3_BUCKET --delete --exclude ".git/*" --exclude "Jenkins File"
                    '''
                }
            }
        }
    }
}
